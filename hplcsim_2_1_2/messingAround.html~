	<script>
		updateCurrentTime();
		function getCurrentTime(){
			var d = new Date(); var hr = Number(d.getHours()) + 1; var min = d.getMinutes(); var sec = d.getSeconds(); var msec = d.getMilliseconds();
			if(hr < 10){ hr = "0"+hr; } if(min < 10){ min = "0"+min; } if(sec < 10){ sec = "0"+sec; } if(msec < 10){ msec = "0"+msec; } if(msec < 100){ msec = "0"+msec; }
			var timeStamp = hr + ":" + min + ":" + sec + "." + msec;
			return timeStamp;
		}
		
		function updateCurrentTime(){
			var timestamp = getCurrentTime();
			document.getElementById("displayTime").innerHTML = timestamp;
		}
		
		setInterval("updateCurrentTime();", 10);
	</script>
